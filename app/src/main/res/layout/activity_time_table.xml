<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeTable">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:padding="1dp"
            android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/monday"
                        android:layout_width="291dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:text="Monday"
                        android:textColor="#eb4034"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        app:fontFamily="casual" />

                    <ImageView
                        android:id="@+id/monday_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15sp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_edit" />
                </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:padding="1dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tuesday"
                    android:layout_width="291dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    app:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="#00D15E"
                    android:text="Tuesday"
                    android:textSize="50sp"
                    />
                <ImageView
                    android:id="@+id/tuesday_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="15sp"
                    android:src="@drawable/ic_edit"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:padding="1dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wednesday"
                    android:layout_width="291dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:text="Wednesday"
                    android:textColor="#000000"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    app:fontFamily="casual" />
                <ImageView
                    android:id="@+id/wednesday_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:padding="1dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/thursday"
                    android:layout_width="291dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    app:fontFamily="casual"
                    android:textColor="#009688"
                    android:text="Thursday"
                    android:textSize="50sp"
                    />
                <ImageView
                    android:id="@+id/thursday_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:padding="1dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/friday"
                    android:layout_width="291dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    app:fontFamily="casual"
                    android:textColor="#3F51B5"
                    android:textStyle="bold"
                    android:text="Friday"
                    android:textSize="50sp"
                    />
                <ImageView
                    android:id="@+id/friday_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:padding="1dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/saturday"
                    android:layout_width="291dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    app:fontFamily="casual"
                    android:textColor="#FF9800"
                    android:textStyle="bold"
                    android:text="Saturday"
                    android:textSize="50sp"
                    />
                <ImageView
                    android:id="@+id/saturday_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:padding="1dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sunday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    app:fontFamily="casual"
                    android:textColor="#BA00FD"
                    android:textStyle="bold"
                    android:text="Sunday"
                    android:textSize="50sp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>